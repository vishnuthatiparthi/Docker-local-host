docker build --platform linux/amd64 -t studentstore .

docker run --name=mongodb -e MONGO_INITDB_ROOT_USERNAME=admin -e MONGO_INITDB_ROOT_PASSWORD=testtesttest -d mongo
cat config.default.js
docker run --name=mongo-express-test -d -p 8081:8081 -e ME_CONFIG_MONGODB_ADMINUSERNAME=admin -e ME_CONFIG_MONGODB_ADMINPASSWORD=testtest -e ME_CONFIG_MONGODB_SERVER=mongodb --link mongodb:mongoexpress mongo-express

mongosh -u admin -p testtesttest
show databases
use studentdb
db.getUsers()

